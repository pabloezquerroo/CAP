# ==============================================================================
NAME=lu

SRC:= lu.cc

# ==============================================================================
# ############## Configure CFLAGS  #############################################
# ==============================================================================
CXX          := icpx
CXXFLAGS      += -O2 -g -qopt-report=3 -axhost -qopenmp
CXXFLAGS      += -I./


# ==============================================================================
# ############## Define make rules #############################################
# ==============================================================================

$(NAME): $(SRC)
	$(CXX) $(CXXFLAGS) $(SRC) -o $(NAME)


run: $(NAME)
	./lu

clean:
	rm -rf $(NAME) *.o *.out *.optrpt *.opt.yaml
